<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#152A49</item>
    </style>

    <style name="DatePickerMode" parent = "android:Theme.Material.Dialog">
        <item name="android:datePickerStyle">@style/DatePickerSpinner</item>
    </style>
    <style name="DatePickerSpinner" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>
</resources>