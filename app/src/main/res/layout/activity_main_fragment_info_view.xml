<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.MainFragmentInfoView">

    <data>
        <variable
            name="viewModel"
            type="com.project.namecard.viewModels.MainFragmentSharedViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical">


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="회원 정보"
            android:textColor="#1A355B"
            android:textSize="30dp"
            android:focusable="false"
            android:clickable="false"/>

        <TextView
            android:text="ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"/>
        <EditText
            android:id="@+id/id"
            android:text="@={viewModel.ID}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="54dp"
            android:layout_marginBottom="15dp"
            android:hint="ID"
            android:singleLine="true"
            android:enabled="false"/>

        <TextView
            android:id="@+id/PassWordText"
            android:text="PassWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"/>
        <EditText
            android:id="@+id/password"
            android:text="@={viewModel.PassWord}"
            android:hint="password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="54dp"
            android:layout_marginBottom="15dp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:enabled="false"/>

        <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"/>
        <EditText
            android:id="@+id/name"
            android:text="@={viewModel.Name}"
            android:hint="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="54dp"
            android:layout_marginBottom="15dp"
            android:singleLine="true"
            android:enabled="false"/>

        <TextView
            android:text="Birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:weightSum="4">
            <EditText
                android:id="@+id/birth"
                android:text="@={viewModel.Birth}"
                android:hint="Birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="5dp"
                android:layout_weight="3.5"
                android:enabled="false"/>
            <ImageView
                android:id="@+id/BirthSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cardregisterimage"
                android:layout_marginRight="50dp"
                android:visibility="invisible"/>
        </LinearLayout>

        <TextView
            android:text="Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:gravity="center"
            android:layout_marginBottom="15dp">
            <EditText
                android:id="@+id/email"
                android:text="@={viewModel.Email}"
                android:hint="Email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_weight="1.6"
                android:singleLine="true"
                android:enabled="false"/>
            <TextView
                android:text="\@"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/emailaddress"
                android:text="@={viewModel.EmailAddress}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:hint="Address"
                android:layout_marginRight="22dp"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:enabled="false"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/state1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:weightSum="5">
            <Button
                android:id="@+id/BtnUserUpdate"
                android:text="회원 정보 수정"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/LogOut"
                android:text="로그아웃"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewModel.LogOutRequest()}"/>
            <Button
                android:id="@+id/BtnUserDelete"
                android:text="회원 탈퇴"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/state2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:weightSum="5"
            android:visibility="gone">
            <Button
                android:id="@+id/BtnUserUpdateRequest"
                android:text="수정 완료"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewModel.BtnUserUpdateRequestClick()}"/>

        </LinearLayout>




    </LinearLayout>


</layout>