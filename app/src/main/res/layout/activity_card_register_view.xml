<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.CardRegisterView">
    
    <data>
        <variable
            name="viewModel"
            type="com.project.namecard.viewModels.CardRegisterViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

                    <ImageView
                        android:id="@+id/cardImage"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="380dp"
                        android:layout_height="168dp"
                        android:visibility="gone"/>
                  <TextView
                      android:id="@+id/cardImageText"
                      android:text="명함 이미지를 선택해주세요\n미 선택시 기본 제공이미지 선택"
                      android:textSize="25dp"
                      android:gravity="center"
                      android:layout_marginTop="30dp"
                      android:layout_marginRight="15dp"
                      android:layout_marginLeft="15dp"
                      android:layout_width="380dp"
                      android:layout_height="168dp"/>
                    <ImageView
                        android:id="@+id/imageMenu"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="right"
                        android:onClick="CardImageMenuClickEvent"
                        android:background="@drawable/imagemenu"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:text="이름"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="25dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginLeft="20dp"/>
                        <EditText
                            android:hint="이름"
                            android:id="@+id/name"
                            android:text="@={viewModel.Name}"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:layout_marginRight="40dp"
                            android:singleLine="true"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:text="회사명"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="25dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginLeft="20dp"/>
                        <EditText
                            android:hint="회사명"
                            android:text="@={viewModel.Company}"
                            android:id="@+id/company"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:layout_marginRight="40dp"
                            android:singleLine="true"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:text="부서"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="25dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginLeft="20dp"/>
                        <EditText
                            android:hint="부서"
                            android:id="@+id/depart"
                            android:text="@={viewModel.Depart}"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:layout_marginRight="40dp"
                            android:singleLine="true"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:text="직책"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="25dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginLeft="20dp"/>
                        <EditText
                            android:hint="직책"
                            android:id="@+id/position"
                            android:text="@={viewModel.Position}"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:layout_marginRight="40dp"
                            android:singleLine="true"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:text="회사번호"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="25dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginLeft="20dp"/>
                        <EditText
                            android:id="@+id/companyNumber"
                            android:text="@={viewModel.CompanyNumber}"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="40dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:hint="회사번호"
                            android:inputType="phone"
                            android:singleLine="true"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:text="휴대폰"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="25dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginLeft="20dp"/>
                        <EditText
                            android:id="@+id/phoneNumber"
                            android:text="@={viewModel.PhoneNumber}"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="40dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:hint="휴대폰"
                            android:singleLine="true"
                            android:inputType="phone"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:text="이메일"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="25dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginLeft="20dp"/>
                        <EditText
                            android:hint="이메일"
                            android:text="@={viewModel.Email}"
                            android:id="@+id/email"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:gravity="center"
                            android:singleLine="true"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="\@"
                            android:layout_weight="0.2"/>
                        <EditText
                            android:id="@+id/emailAddress"
                            android:text="@={viewModel.EmailAddress}"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:visibility="gone"
                            android:layout_marginRight="40dp"
                            android:inputType="textEmailAddress"/>
                        <Spinner
                            android:id="@+id/emailAddressSpinner"
                            android:onItemSelected="@{(parent, view, pos, id) -> viewModel.AddressSelectClick(parent, view, pos, id)}"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="40dp"
                            android:layout_weight="0.9"
                            android:entries="@array/email_address_array"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:text="팩스"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="25dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginLeft="20dp"/>
                        <EditText
                            android:hint="팩스"
                            android:id="@+id/faxNumber"
                            android:text="@={viewModel.FaxNumber}"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:layout_marginRight="40dp"
                            android:inputType="phone"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:text="주소"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="25dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginLeft="20dp"
                            android:singleLine="true"/>
                        <EditText
                            android:hint="주소"
                            android:id="@+id/address"
                            android:text="@={viewModel.Address}"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:singleLine="true"
                            android:layout_marginRight="40dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="20dp"/>
                        <EditText
                            android:hint="상세 주소"
                            android:id="@+id/detailaddress"
                            android:text="@={viewModel.Detailaddress}"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:gravity="center"
                            android:singleLine="true"/>
                        <Button
                            android:id="@+id/addressSelect"
                            android:text="주소 검색"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:layout_marginRight="40dp"/>
                    </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp">
                    <TextView
                        android:text="메모"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:layout_marginLeft="54dp"
                        android:layout_marginBottom="10dp"/>
                    <EditText
                        android:hint="내용을 입력 하세요"
                        android:id="@+id/memo"
                        android:text="@={viewModel.Memo}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:lines="4"
                        android:minLines="4"
                        android:maxLines="8"
                        android:padding="10dp"
                        android:scrollbars="vertical"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginBottom="15dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="3"
                        android:gravity="center">
                        <Button
                            android:id="@+id/Register"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="등록"
                            android:layout_marginLeft="45dp"/>
                        <Button
                            android:id="@+id/Cancel"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="취소"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="45dp"/>
                    </LinearLayout>

                </LinearLayout>

          </LinearLayout>

    </ScrollView>


</layout>